extends layout

block content
	h1 Sign Up!
	form.col.s12(action='/signup', method='POST', autocomplete='off')
		p Username
		input(type='text', name='username',placeholder='Enter your username')
		br
		p Email
		input(type='text', name='email', placeholder='Enter your email')
		br
		p Password
		input(type='password', name='password', placeholder='Choose a password')
		br
		br
		button.btn.btn-default#signup(type="submit", name="submit") CREATE NEW ACCOUNT
		p= message